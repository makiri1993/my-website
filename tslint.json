{
  "defaultSeverity": "warning",
  "extends": ["tslint:recommended"],
  "linterOptions": {
    "exclude": ["node_modules/**"]
  },
  "rules": {
    "quotemark": [true, "single"],
    "semicolon": [true, "never"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "rules": {
      "class-name": true,
      "curly": true,
      "eofline": false,
      "jsdoc-format": true,
      "jsx-no-lambda": false,
      "jsx-no-bind": false,
      "jsx-wrap-multiline": false,
      "jsx-no-multiline-js": false,
      "jsx-boolean-value": false,
      "max-line-length": [true, 160],
      "no-console": [true, "log", "error", "info", "time", "timeEnd", "trace"],
      "no-construct": true,
      "no-debugger": true,
      "no-duplicate-variable": true,
      "no-empty": false,
      "no-eval": true,
      "no-shadowed-variable": true,
      "no-string-literal": true,
      "no-switch-case-fall-through": true,
      "no-trailing-whitespace": false,
      "no-unused-expression": true,
      "no-use-before-declare": true,
      "object-literal-shorthand": true,
      "no-empty-interface": true,
      "no-duplicate-super": true,
      "no-duplicate-switch-case": true,
      "no-parameter-reassignment": true,
      "no-return-await": true,
      // "no-unused-variable": true,
      "triple-equals": true,
      "use-isnan": true,
      "no-duplicate-imports": true,
      "prefer-const": true,
      "trailing-comma": true,
      "one-line": [true, "check-catch", "check-else", "check-open-brace", "check-whitespace"],
      "variable-name": [true, "ban-keywords", "check-format", "disallow-leading-underscore", "allow-pascal-case"],
      "no-consecutive-blank-lines": true
    }
  }
}
